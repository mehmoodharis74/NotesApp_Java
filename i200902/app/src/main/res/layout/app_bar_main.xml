                    android:id="@+id/app_bar_grid_on"
                    android:layout_width="50dp"
                    android:layout_height="59dp"
                    android:layout_alignParentEnd="true"
                    android:background="@color/blue"
                    android:src="@drawable/ic_baseline_view_list_24" />
